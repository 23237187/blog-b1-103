doctype
html
    head
        title= 'Poet Demo'
        meta(charset='utf-8')
        link(rel='stylesheet', href='/css/bootstrap.css')
    body
        .navbar.navbar-fixed-top
            .navbar-inner
                .container
                    a.brand(href='/') Poet Demos
                    ul.nav
                        li.active
                            a(href="/") 我的ata
                        li
                            a(href="/login") 登陆
                        li
                            a(href="/reg") 注册
        .wrap
            .container
                .row
                    .span8
                        block content
                    .span4
                        .well.sidebar-nav
                            ul.nav.nav-list
                                li.nav-header categories
                                - each cat in getCategories()
                                    li
                                        a(href=categoryURL(cat)) #{cat}
                                li.nav-header tags
                                - each tag in getTags()
                                    li
                                        a(href=tagURL(tag)) #{tag}
